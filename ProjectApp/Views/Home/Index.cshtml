<h2>Add</h2>
<form action="javascript:void(0);" method="POST" onsubmit="addproject()">
    
    <input type="text" id="ProjectDesc" placeholder="description" />
    <input type="text" id="ProjectIsdone" placeholder="Isdone"/>
    <input type="submit" value="Add" />
</form>
<div id="editForm">
    <h3>Edit</h3>

    <form action="javascript:void(0); " onsubmit="UpdateItem()">
        <input type="hidden" id="editProductId" placeholder="id"/>
        <input type="text" id="editdesc" placeholder="description"/>
        <input type="text" id="editIsdone" placeholder="Isdone"/>

        <input type="submit" value=" Update" />
    </form>
</div>

<div id="deleteForm">
    <h3>Delete</h3>

    <form action="javascript:void(0); " onsubmit=" DeleteItem()">
        <input type="text" id="deleteProductId" placeholder="id"/>
        <input type="text" id="deletedesc" placeholder="description"/>
        <input type="text" id="deleteIsdone" placeholder="Isdone"/>

        <input type="submit" value=" Delete" />
    </form>
</div>

<p id="counter"></p>

